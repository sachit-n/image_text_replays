#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import os os

<ReplayScreen>:
    ques1opt1: q1o1
    ques1opt2: q1o2
    ques2opt1: q2o1
    ques2opt2: q2o2

    name: 'replays'
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        Label:
            center: self.parent.center
            text: root.ques_text
            font_size: sp(30)
            size_hint: 1, 0.3
            text_size: self.width, None
            padding_x: sp(30)
        BoxLayout:
            size_hint: 1, 0.5
            orientation: 'horizontal'
            Label:
                text: "Index: " + str(root.curr_idx) + "\nProblem ID: " + str(root.prob_id) + "\nStep Number: " + str(root.step_num)
                font_size: sp(20)
                size_hint: 0.2, 1
                text_size: self.width, None
                padding_x: sp(30)
            AsyncImage:
                source: root.img_url
                allow_stretch: True
                keep_ratio: True
                size_hint: 0.8, 1
        Button:
            text: 'Settings'
            font_size: sp(20)
            on_release: app.open_settings()
            size_hint: 0.1, 0.05

        GridLayout:
            size_hint: 1, 0.2
            cols: 1
            orientation: 'vertical'
            spacing: sp(10)
            BoxLayout:
                size_hint: 1, 0.25
                orientation: 'horizontal'
                Label:
                    text: "Option1"
                CheckBox:
                    id: q1o1
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    group: "q1"
                Label:
                    text: "Option2"
                CheckBox:
                    id: q1o2
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    group: "q1"

            BoxLayout:
                size_hint: 1, 0.25
                orientation: 'horizontal'
                Label:
                    text: "Option1"
                CheckBox:
                    id: q2o1
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    group: "q2"
                Label:
                    text: "Option2"

                CheckBox:
                    id: q2o2
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    group: "q2"


            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.5
                Button:
                    text: 'Previous'
                    font_size: sp(50)
                    on_release: root.prev_replay()
                Button:
                    text: 'Next'
                    font_size: sp(50)
                    on_release: root.next_replay() if root.check_if_answered() else root.show_incomplete_popup()
